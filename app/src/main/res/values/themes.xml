<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AndroidKotlinBoilerplate" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/kcPrimaryColor</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/kcPrimaryColor</item>
        <item name="android:navigationBarColor">@color/kcPrimaryColor</item>
        <!-- Customize your theme here. -->
    </style>

    <!--     Yellow Button Style -->
    <style name="yellowBtnStyle" parent="Platform.MaterialComponents">
        <item name="cornerRadius">8dp</item>
        <item name="backgroundTint">@color/kcYellow</item>
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:textAllCaps">false</item>
        <item name="textAllCaps">false</item>
        <item name="fontFamily">@font/montserrat_medium</item>
        <item name="android:textColor">@color/kcPrimaryColor</item>
    </style>

    <!--    Intro Title Style-->
    <style name="introTitleText">
        <item name="android:textSize">@dimen/sp_28</item>
        <item name="android:textColor">@color/kcYellow</item>
        <item name="fontFamily">@font/montserrat_medium</item>
    </style>

    <!--    Intro Description Style-->
    <style name="descTitleText">
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:textColor">@color/kcCaptionLightGray</item>
        <item name="fontFamily">@font/montserrat_medium</item>
    </style>

    <style name="white14Medium">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="fontFamily">@font/montserrat_medium</item>
    </style>
</resources>