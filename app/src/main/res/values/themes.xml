<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AndroidKotlinBoilerplate" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/kcPrimaryColor</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/kcPrimaryColor</item>
        <item name="android:navigationBarColor">@color/kcPrimaryColor</item>
        <!-- Customize your theme here. -->
    </style>

    <!--     Yellow Button Style -->
    <style name="yellowBtnStyle" parent="Platform.MaterialComponents">
        <item name="cornerRadius">8dp</item>
        <item name="backgroundTint">@color/kcYellow</item>
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:textAllCaps">false</item>
        <item name="textAllCaps">false</item>
        <item name="fontFamily">@font/montserrat_medium</item>
        <item name="android:textColor">@color/kcPrimaryColor</item>
    </style>

    <!--    Intro Title Style-->
    <style name="introTitleText">
        <item name="android:textSize">@dimen/sp_28</item>
        <item name="android:textColor">@color/kcYellow</item>
        <item name="fontFamily">@font/montserrat_medium</item>
    </style>

    <!--    Intro Description Style-->
    <style name="descTitleText">
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:textColor">@color/kcCaptionLightGray</item>
        <item name="fontFamily">@font/montserrat_medium</item>
    </style>

    <!--     Blue Button Style -->
    <style name="blueBtnStyle" parent="Platform.MaterialComponents">
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:textAllCaps">false</item>
        <item name="textAllCaps">false</item>
        <item name="fontFamily">@font/montserrat_medium</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!--    EditText Style-->
    <style name="editTextStyle" parent="android:style/Widget.EditText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/kcCaptionLightGray</item>
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="fontFamily">@font/montserrat_regular</item>
        <item name="android:lines">1</item>
    </style>

    <style name="white14Medium">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="fontFamily">@font/montserrat_medium</item>
    </style>

    <style name="yellowText">
        <item name="android:textColor">@color/kcYellow</item>
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="fontFamily">@font/montserrat_medium</item>
    </style>

    <style name="whiteLargeTitle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/sp_25</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/montserrat_medium</item>
    </style>

    <style name="black14Medium">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="fontFamily">@font/montserrat_medium</item>
    </style>

    <style name="white18Medium">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/sp_18</item>
        <item name="fontFamily">@font/montserrat_medium</item>
    </style>

    <style name="black25Bold">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/sp_25</item>
        <item name="fontFamily">@font/montserrat_bold</item>
    </style>

    <style name="grey14Medium">
        <item name="android:textColor">@color/kcCaptionLightGray</item>
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="fontFamily">@font/montserrat_medium</item>
    </style>

    <style name="black18Medium">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/sp_18</item>
        <item name="fontFamily">@font/montserrat_medium</item>
    </style>

    <style name="grey16Light">
        <item name="android:textColor">@color/kcCaptionLightGray</item>
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="fontFamily">@font/montserrat_light</item>
    </style>

    <style name="blue14Medium">
        <item name="android:textColor">@color/kcPrimaryColor</item>
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="fontFamily">@font/montserrat_medium</item>
    </style>

    <style name="BottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/bottomSheetStyleWrapper</item>
    </style>

    <style name="bottomSheetStyleWrapper" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="whiteBtnStyle" parent="Platform.MaterialComponents">
        <item name="cornerRadius">8dp</item>
        <item name="backgroundTint">@color/white</item>
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:textAllCaps">false</item>
        <item name="textAllCaps">false</item>
        <item name="fontFamily">@font/montserrat_medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="strokeColor">@color/black</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <style name="grayEitTextStyle" parent="android:style/Widget.EditText">
        <item name="android:textColor">@color/hintColor</item>
        <item name="android:textColorHint">@color/kcCaptionLightGray</item>
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="cursorColor">@color/kcGray</item>
        <item name="fontFamily">@font/montserrat_regular</item>
        <item name="android:lines">1</item>
    </style>

    <style name="roundedImageViewRounded">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
</resources>